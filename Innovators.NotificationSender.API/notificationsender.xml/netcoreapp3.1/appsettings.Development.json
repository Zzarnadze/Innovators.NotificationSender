{
  "ConnectionStrings": {
    "NotificationSenderConnectionString": "Server=localhost;Database=InnovatorsNotificationDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "SwaggerDocOptions": {
    "Title": "Innovators Notification API",
    "Version": "1.0",
    "Description": "API for Notification"
  },

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs\\log-{Date}.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}
